<!-- for success -->
<% if(success && success.length) { %> 
<div class="alert alert-success alert-dismissible fade show col-6 offset-3" role="alert">
    <h6 style="color:maroon;"><%= success %></6>
    <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="close"
    ></button>
</div>
<% } %>

<!-- for error flash -->

<% if(error && error.length) { %> 
    <div class="alert alert-danger alert-dismissible fade show col-6 offset-3" role="alert">
        <h6 style="color:maroon;"><%= error%></6>
        <button
        type="button"
        class="btn-close"
        data-bs-dismiss="alert"
        aria-label="close"
        ></button>
    </div>
    <% } %>